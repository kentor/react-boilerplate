{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for prototyping with React",
  "scripts": {
    "build": "rm -fr public && gulp build && npm run js:build ",
    "js:build": "NODE_ENV=production webpack",
    "js:watch": "mkdir -p public/js && watchify -p [ browserify-hmr -h 0.0.0.0 -m none --supportModes [ websocket ] ] src/js/app.js -o public/js/app.js -v",
    "lint": "eslint .",
    "lint:watch": "esw -w",
    "prestart": "rm -fr public && mkdir -p public/js",
    "start": "parallelshell 'gulp' 'npm run js:watch' 'npm run lint:watch' 'npm run webserver'",
    "test": "NODE_ENV=test mocha --opts ./mocha.opts",
    "webserver": "live-server --ignore=js --no-browser --port=3000 public"
  },
  "author": "Kenneth Chung",
  "devDependencies": {
    "babel-core": "6.7.7",
    "babel-loader": "6.2.4",
    "babel-plugin-react-transform": "2.0.2",
    "babel-plugin-transform-react-display-name": "6.5.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-register": "6.7.2",
    "babelify": "7.3.0",
    "browserify": "13.0.0",
    "browserify-hmr": "0.3.1",
    "core-js": "2.3.0",
    "eslint": "2.8.0",
    "eslint-config-kentor": "2.0.0",
    "eslint-plugin-react": "5.0.1",
    "eslint-watch": "2.1.10",
    "expect": "1.18.0",
    "gulp": "3.9.1",
    "gulp-postcss": "6.1.0",
    "gulp-sourcemaps": "2.0.0-alpha",
    "history": "2.1.1",
    "immutable": "3.8.1",
    "live-server": "1.0.0",
    "mocha": "2.4.5",
    "parallelshell": "2.0.0",
    "postcss-cssnext": "2.5.2",
    "postcss-import": "8.1.0",
    "react": "15.0.1",
    "react-dom": "15.0.1",
    "react-router": "2.3.0",
    "react-transform-hmr": "1.0.4",
    "sinon": "1.17.3",
    "watchify": "3.7.0",
    "webpack": "1.13.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
