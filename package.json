{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for prototyping with React",
  "scripts": {
    "build": "rm -fr public && gulp build && npm run js:build ",
    "js:build": "NODE_ENV=production webpack",
    "js:watch": "mkdir -p public/js && watchify -p [ browserify-hmr -h 0.0.0.0 -m none --supportModes [ websocket ] ] src/js/app.js -o public/js/app.js -v",
    "lint": "eslint .",
    "lint:watch": "esw -w",
    "prestart": "rm -fr public && mkdir -p public/js",
    "start": "parallelshell 'gulp' 'npm run js:watch' 'npm run lint:watch' 'npm run webserver'",
    "test": "NODE_ENV=test jest",
    "webserver": "live-server --ignore=js --no-browser --port=3000 public"
  },
  "author": "Kenneth Chung",
  "devDependencies": {
    "babel-core": "6.18.2",
    "babel-jest": "17.0.2",
    "babel-loader": "6.2.8",
    "babel-plugin-react-transform": "2.0.2",
    "babel-plugin-transform-object-rest-spread": "6.19.0",
    "babel-plugin-transform-react-display-name": "6.8.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babelify": "7.3.0",
    "browserify": "13.1.1",
    "browserify-hmr": "0.3.5",
    "classnames": "2.2.5",
    "core-js": "2.4.1",
    "eslint": "3.10.2",
    "eslint-config-kentor": "3.9.1",
    "eslint-plugin-react": "6.7.1",
    "eslint-watch": "2.1.14",
    "expect": "1.20.2",
    "gulp": "3.9.1",
    "gulp-postcss": "6.2.0",
    "gulp-sourcemaps": "2.2.0",
    "immutable": "3.8.1",
    "jest": "17.0.3",
    "live-server": "1.1.0",
    "mocha": "3.1.2",
    "parallelshell": "2.0.0",
    "postcss-cssnext": "2.8.0",
    "postcss-import": "8.2.0",
    "react": "15.4.1",
    "react-dom": "15.4.1",
    "react-router": "3.0.0",
    "react-transform-hmr": "1.0.4",
    "sinon": "1.17.6",
    "watchify": "3.7.0",
    "webpack": "1.13.3"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
