{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for prototyping with React",
  "scripts": {
    "assets:build": "gulp build",
    "assets:watch": "gulp",
    "build": "npm-run-all clean -p js:build assets:build",
    "clean": "rm -fr public && mkdir -p public/js",
    "js:build": "NODE_ENV=production browserify src/js/app.js -p bundle-collapser/plugin -p dep-case-verify -g loose-envify -g unreachable-branch-transform | uglifyjs -c -m -o public/js/app.js",
    "js:watch": "watchify src/js/app.js -p browserify-hmr -p dep-case-verify -o public/js/app.js -v",
    "lint": "eslint .",
    "lint:watch": "esw -w",
    "start": "npm-run-all clean -p assets:watch js:watch lint:watch webserver",
    "test": "NODE_ENV=test jest",
    "webserver": "live-server --ignore=js --no-browser --port=10000 public"
  },
  "author": "Kenneth Chung",
  "dependencies": {
    "babel-core": "6.22.1",
    "babel-jest": "18.0.0",
    "babel-plugin-transform-object-rest-spread": "6.22.0",
    "babel-plugin-transform-react-display-name": "6.22.0",
    "babel-preset-env": "1.5.2",
    "babel-preset-react": "6.22.0",
    "babelify": "7.3.0",
    "browserify": "14.0.0",
    "browserify-hmr": "0.3.5",
    "bundle-collapser": "1.2.1",
    "classnames": "2.2.5",
    "core-js": "2.4.1",
    "dep-case-verify": "2.1.0",
    "eslint": "3.14.1",
    "eslint-config-kentor": "3.14.0",
    "eslint-plugin-react": "6.9.0",
    "eslint-watch": "2.1.14",
    "gulp": "3.9.1",
    "gulp-postcss": "6.3.0",
    "gulp-sourcemaps": "2.4.0",
    "immutable": "3.8.1",
    "jest": "18.1.0",
    "live-server": "1.2.0",
    "loose-envify": "1.3.1",
    "npm-run-all": "4.0.2",
    "postcss-cssnext": "2.9.0",
    "postcss-import": "9.1.0",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-hot-loader": "next",
    "react-router-dom": "4.1.1",
    "sinon": "1.17.7",
    "uglify-js": "3.0.19",
    "unreachable-branch-transform": "0.5.1",
    "watchify": "3.9.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
