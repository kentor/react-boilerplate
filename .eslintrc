---
ecmaFeatures:
  jsx: true
env:
  browser: true
  es6: true
  node: true
plugins:
  - react
rules:
  comma-dangle: 0
  curly: [2, multi-line]
  no-multi-spaces: 0 # Ideally, we'd want no multi spaces unless for alignment
  no-multi-str: 0
  no-undef: 1
  no-unused-vars: [1, args: none] # Warn until JSX implies using React is fixed
  strict: 0
  ### Style Rules ###
  eol-last: 2
  indent: [2, 2]
  max-len: [2, 80]
  new-cap: 0
  no-underscore-dangle: 0
  quotes: 0
  space-after-keywords: 2
  space-before-function-parentheses: [2, never]
  ### eslint-plugin-react ###
  react/jsx-no-undef: 1
  react/jsx-uses-react: 1
  react/jsx-uses-vars: 1
  react/react-in-jsx-scope: 1
